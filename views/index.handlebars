<div class="jumbotron text-center">
  <h1>Burger Bucket List</h1>
</div>

<section class="container-md">

  <div class="row justify-content-center">
    <div class="row">
      <div class="col-12">

        <h4>Add A Burger!</h4>
        <form class="create-form">
          <div class="form-group">
            <input type="text" id="burg" name="burger_name">
          </div>
          <button type="submit">Submit</button>
        </form>

      </div>
    </div>
  </div>

  <br>
  <hr>
  <br>
{{!-- List of undevoured --}}
  <div class="row">
    <div class="col-md-6">
      <h3>Burgers ready to be devoured!</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
{{!-- List of devoured --}}
    <div class="col-md-6">
      <h3>Burgers that are devoured!</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</section>